<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_shade_1"
    tools:context=".FacultyLogin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="165dp"
        android:layout_height="74dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/logo" />


    <TextView
        android:id="@+id/idheading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="20dp"
        android:text="Login-Faculty"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/button_back"
        android:text="Login"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:id="@+id/facultylogin"/>

    <EditText
        android:id="@+id/emailfact"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@id/idheading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20sp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Email"
        android:textColorHint="@color/white"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/passwordfact"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_below="@id/emailfact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20sp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>